<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/portada">

    <EditText
        android:id="@+id/usuarioEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/loginNextBtn"
        android:layout_marginBottom="1dp"
        android:hint="@string/login_name_field"
        android:textColorHint="#BCEE8A"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="#5fc100"
        android:textSize="35sp"
        android:maxLines="1"
        android:gravity="center" />

    <Button
        android:id="@+id/loginNextBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Iniciar"
        android:background="#f95319"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="35sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/loginVersionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="VersiÃ³n x.x.x"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64" />

</android.support.constraint.ConstraintLayout>